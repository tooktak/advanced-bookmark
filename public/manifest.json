{
  "manifest_version": 3,

  "name": "Advanced Bookmark",
  "description": "Searchable Advanced Bookmark",
  "version": "1.0.0",

  "options_page": "options.html",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "bookmarks", "storage"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
